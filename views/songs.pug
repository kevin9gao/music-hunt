extends layout.pug
append head
    script(src="/javascripts/upvotes.js" type="module" defer)

block content
    input(type="hidden" data-upvotes= songUpvotes data-songs= songsname="db")
    table
        thead
            tr
                th Album Art
                th Song Name
                th Song Artist
                th Play Song
                th Description
                th Upvotes
        tbody
            each song in songs
                - let link = song.urlLink.replace(".com/", ".com/embed/") //changes the spotify link to a url that can be embedded
                - count =0

                each songUpvote in songUpvotes
                    if (songUpvote.songId === song.id)
                        - count +=1
                tr
                    td
                        img(src=song.albumArt class="songPic" height="150px" width="150px")
                    td
                        a(href=`/songs/${song.name}/${song.id}`)= song.name
                    td
                        a(href=`/users/${song.User.username}`)= song.User.username
                    td
                     iframe(style = "border-radius:12px" src = `${link.slice(0, -20)}?utm_source=generator` width = "100%" height = "80" frameBorder = "0" allowfullscreen = "" allow = "autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture")

                    td= song.description
                    td= count
                    td
                        //- form(class="upvote_buttons")
                        button(class="upvote_buttons") Upvote

