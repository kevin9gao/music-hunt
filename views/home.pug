extends layout

append head
  title= title
  link(rel='stylesheet' href='/stylesheets/home.css')
  script(src="/javascripts/index.js" type="module" defer)
block content
  div.main_content_container
    main.songs_container
      div
        div#song_header
          div.header_text_style#song_header= 'Trending Music ðŸ‘‡'
          div.sub_header_text_style= 'Featured'
        //- i for finding number of upvotes associated with song
        - let i = 0
        each song in trendingSongs
          div.song
            a(href=`/songs/${song.name}/${song.id}`)
              img.song_img(src=song.albumArt)
            div.song_info
              a(href=`/songs/${song.name}/${song.id}`)
                div#song_name= song.name
                div#song_artist= song.User.username
            div.upvotes
              button.upvote_button(type='button')
                div#upvote_container
                  div.upvote_icon
                  div.upvote_text_style= topUpvotes[i]
                  - i = i + 1

    aside.sidebar
      div.artist_block= 'DISCOVER NEW ARTISTS â†’'
      div= 'artist here'
